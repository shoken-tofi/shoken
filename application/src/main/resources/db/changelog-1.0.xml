        </insert>
        <insert tableName="bids">
            <column name="id" value="2"/>
            <column name="seller_id" value="1"/>
            <column name="status" value="NEW"/>
            <column name="title" value="title2"/>
            <column name="featured_image_id" value="2"/>
            <column name="type" value="SHARE"/>
            <column name="quantity" value="5"/>
            <column name="description" value="description2"/>
            <column name="start_price" value="19.00"/>
