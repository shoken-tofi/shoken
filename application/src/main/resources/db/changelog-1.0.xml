            <column name="creation_date" value="2016-11-11"/>
            <column name="expiration_date" value="2016-11-15"/>
            <column name="payment_type" value="PAY_PAL"/>
            <column name="comment" value=""/>
        </insert>
    </changeSet>
</databaseChangeLog>