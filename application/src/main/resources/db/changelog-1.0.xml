            <column name="type" value="BOND"/>
            <column name="quantity" value="1"/>
            <column name="description" value="description1"/>
            <column name="start_price" value="11.20"/>
            <column name="step" value="1.00"/>
            <column name="creation_date" value="2016-11-12"/>
            <column name="expiration_date" value="2016-11-16"/>
            <column name="payment_type" value="PAY_PAL"/>
