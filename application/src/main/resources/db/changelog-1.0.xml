        <insert tableName="bid_images">
            <column name="id" value="1"/>
            <column name="path" value="/bid_images/"/>
            <column name="name" value="bid1"/>
            <column name="extension" value="JPG"/>
        </insert>
        <insert tableName="bid_images">
            <column name="id" value="2"/>
            <column name="path" value="/bid_images/"/>
            <column name="name" value="bid2"/>
            <column name="extension" value="JPG"/>
        </insert>

        <insert tableName="bids">
            <column name="id" value="1"/>
            <column name="seller_id" value="1"/>
            <column name="status" value="NEW"/>
            <column name="title" value="title1"/>
